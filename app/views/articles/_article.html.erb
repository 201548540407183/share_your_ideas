<% obj.each do |article| %>
  <div class="row">
    <div class="well col-xs-7 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to article.title, article_path(article) %>
        </div>
          <div class="article-info">
            <p>Posted On: <%= article.created_at.strftime("%b %d, %Y") %>  by <%= article.user.username if article.user =%>, Updated On: <%= article.updated_at.strftime("%b %d, %Y") %> by <%= article.user.username if article.user =%> </p>
         </div>
          <div class="article-body">
            <%= simple_format truncate(article.description, :ommision => "... Read More", :length => 1000, separator: " ") %>
            <%= link_to "Continue Reading", article_path(article), class: "btn btn-xs btn-primary", id: "continue" %>
          </div>
          <div class="article-actions">
            <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-xs btn-primary", id: "links" %>
            <%= link_to "Delete this article", article_path(article), method: :delete,
                                              data: { confirm: "Are you sure you want to delete this article?"},
                                              class: "btn btn-xs btn-danger",
                                              id: "links" %>
          </div>
    </div>
  </div>
</div>
<% end %>
