<div class="jumbotron">
      <ul class="nav navbar-nav">
<%= link_to "Share Your Ideas", root_path, class: "navbar-brand", id: "symbol" %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" id="logo" data-toggle="dropdown" role="button"
                 aria-haspopup="true" aria-expanded="false"><span class="fa fa-bars"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Sign In", login_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "Sign Up", "#signupModal", "data-toggle" => "modal" %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "All Articles", articles_path %></li>
                <li><%= link_to "My Articles", '#' %></li>
                <li><%= link_to "New Article", new_article_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "About Me", "#myModal", "data-toggle" => "modal" %></li>
                <li><%= link_to "Bloggers", users_path %></li>
                <li><% if logged_in? %>
                  <%= link_to "Log Out", logout_path, method: :delete %>
                  <% end %>
                 </li>
              </ul>
          </li>
       </ul>
  <div class="col-xs-8 col-xs-offset-2"><%= render "layouts/messages" %></div>
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 align="center" class="modal-title" id="myModalLabel">About Me</h4>
            </div>
            <div class="modal-body">
              <p>I'm a beginner with ruby on rails.</p>
              <p>If you have any question with this app,please connect with me.</p>
              <p>My name is Alostar Musoom Lin.</p>
              <p>And my email address is linc.musoom@foxmail.com.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

  <%= form_for(@user, :html => {class: "modal-dialog", role: "document"}) do |f| %>
<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
	  <div class="modal-content">
		 <div class="modal-header">
       <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
       <div class="panel-heading">
			    <h3 class="panel-title">Sign Up</h3>
			 </div>
			 	 <div class="panel-body">
			     <form role="form">
			    	 <div class="form-group">
               <%= f.text_field :username, class: "form-control input-sm",
                                placeholder: "Enter username", autofocus: true %>
			    	 </div>
			    	 <div class="form-group">
                  <%= f.email_field :email, class: "form-control input-sm", placeholder: "Enter email" %>
			    	 </div>
			    	 <div class="form-group">
                <%= f.password_field :password, class: "form-control input-sm", placeholder: "Enter password" %>
			    					</div>
			    	 <div class="form-group">
                <%= f.password_field :password_confirmation, class: "form-control input-sm", placeholder: "Repeat Your password" %>
			    					</div>
                <%= f.submit "Sign up", class: 'btn btn-info btn-block', id: "links"%>
			    		</form>
			    	 </div>
    	   </div>
      </div>
   </div>
</div>
<% end %>
       <nav align="center" class="navbar-fixed-bottom" >
         <p class="copylogo" align="center">Made with<span class="fa fa-heart heartbeat">
           </span>Alostar Musoom Lin  |  &copy; Rails</p>
       </nav>
</div>


