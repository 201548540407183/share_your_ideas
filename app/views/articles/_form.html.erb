<%= render 'shared/errors', obj: @article %>

  <div class="row">
    <div class="well col-xs-7 col-xs-offset-2">
      <div class="well well-lg">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
        <div class="article-title">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
    <div class="form-group">
      <div class="article-body">
        <%= f.bootsy_area :description, rows: 25, class: "form-control", placeholder: "Body of article" %>
      </div>
    </div>
    <div class="form-group">
       <div class="article-actions">
        <%= f.submit class: "btn btn-xs btn-primary", id: "links" %>
        <%= link_to "Cancel and Return", articles_path, class: "btn btn-xs btn-primary", id: "links" %>
      </div>
    </div>
    <% end %>
</div>
</div>
</div>

